{
    "openapi": "3.0.0",
    "info": {
      "title": "My API",
      "description": "API documentation",
      "version": "1.0.0"
    },
    "paths": {
      "/v1/twit": {
        "post": {
          "summary": "Postear un twit",
          "description": "Este endpoint se utiliza para postear un twit",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "description": "El token de la persona"
                    },
                    "body": {
                      "type": "string",
                      "description": "El mensaje que quiere mandar"
                    },
                    "tags":{
                      "type": "object",
                      "description": "Los tags que se adhierena a este twit"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Successful login"
            },
            "400": {
              "description": "Invalid credentials"
            }
          }

        }
      },
      "/v1/twit/comment": {
        "post": {
          "summary": "Register a new user",
          "description": "Use this endpoint to register a new user in the system.",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "description": "The user's ID."
                    },
                    "post_id": {
                      "type": "string",
                      "description": "The id of the post the user is commenting"
                    },
                    "body":{
                      "type": "string",
                      "description": "The user comment."
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "User registered successfully"
            },
            "400": {
              "description": "Invalid input data"
            }
          }
        }
      },
      "/v1/twit/comment/:id":{
        "post": {
          "parameters":
            {
              "in": "path",
              "name": "id",
              "required": true,
              "schema": {
                "type": "string"
              },
              "description": "The ID of the comment to be handled."
            },

          "summary": "Authenticate token",
          "description": "Use this endpoint to authenticate user.",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "description": "The user's token."
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Logged In Succesfully"
            },
            "400": {
              "description": "Invalid input data"
            }
          }
        }
      },
      "/v1/auth/federate/google/login":{
        "get":{
          "summary": "Endpoint para recibir REDIRECT/CALLBACKS de google",
          "description": "Use this endpoint to login user with Google.",
          "requestBody": {
            "content": {
              "application/json": {
                  "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "description": "The user's token."
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/v1/federate/google/authenticate":{
        "post": {
          "summary": "Authenticate google token",
          "description": "Use this endpoint to authenticate user.",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "description": "The user's token."
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "User registered successfully"
            },
            "400": {
              "description": "Invalid input data"
            }
          }
        }
      }
    }
  }