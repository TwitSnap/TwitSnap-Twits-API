{
    "openapi": "3.0.0",
    "info": {
      "title": "My API",
      "description": "API documentation",
      "version": "1.0.0"
    },
    "paths": {
      "/v1/twit": {
        "post": {
          "summary": "Postear un twit",
          "description": "Este endpoint se utiliza para postear un twit",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "body": {
                      "type": "string",
                      "description": "El mensaje que quiere mandar"
                    },
                    "tags": {
                      "type": "array",
                      "description": "Los tags que se adhieren a este twit",
                      "items": {
                        "type": "string",
                        "description": "Un tag individual"
                      }
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Successful login"
            },
            "400": {
              "description": "Invalid credentials"
            }
          }

        }
      },
      "/v1/twit/post": {
        "get": {
          "summary":"Get a post with all the comments",
          "description":"Get a Post by id with all the comments",
          "parameters": [
            {
              "name": "id",
              "in": "query",
              "description": "The id of the post",
              "required": false,
              "type": "string"
            }
          ]}
      },
      "/v1/twit/comment":{

        "post":{
          "summary": "Posetar un commentario a un post",
          "description": "Use this endpoint to authenticate user.",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "body":{
                      "type":"string",
                      "description": "The user comment."
                    },
                    "post_id":{
                      "type":"string",
                      "description":"El id del post que se quiere comentar"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Logged In Succesfully"
            },
            "400": {
              "description": "Invalid input data"
            }
          }
      }},
      "/v1/twit/posts/user":{
        "get": {
          "summary": "Obtener todos los posts de un usuario",
          "description": "Use this endpoint to authenticate user.",
          "parameters": [
            {
              "name": "user_id",
              "in": "query",
              "description": "The name of the user",
              "required": false,
              "type": "string"
            }
          ]}


      }
  }
}